<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cat5"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="367dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toTopOf="@+id/btnFeed2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/cat6" />

    <Button
        android:id="@+id/btnFeed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feed"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlay2"
        app:layout_constraintEnd_toStartOf="@+id/btnPlay2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPlay2" />

    <Button
        android:id="@+id/btnPlay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Hunger2"
        app:layout_constraintEnd_toStartOf="@+id/btnClean2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnFeed2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnClean2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clean"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlay2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnPlay2"
        app:layout_constraintTop_toTopOf="@+id/btnPlay2" />

    <EditText
        android:id="@+id/Hunger2"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="text"
        android:text="Hunger :              Tom is eating"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Clean2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFeed2"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/Clean2"
        android:layout_width="352dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:text="Clean :"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Happy2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hunger2"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/Happy2"
        android:layout_width="353dp"
        android:layout_height="54dp"
        android:ems="10"
        android:inputType="text"
        android:text="Happy :"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Clean2"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>